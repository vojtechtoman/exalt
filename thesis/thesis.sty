\newcommand{\square}{\framebox(6,6){}}
\newcommand{\rightsquare}{\hfill\square{}}


\newcommand{\simplesection}[2]%
	{\textbf{#1. }#2}


\newcounter{definitionc}
\renewcommand{\thedefinitionc}{Definition \arabic{definitionc}}
\newcommand{\definition}[2]%
	{\refstepcounter{definitionc}\bigskip%
	\noindent\textbf{\thedefinitionc{} (#1). }%
	#2\bigskip}


\newcounter{examplec}
\renewcommand{\theexamplec}{Example \arabic{examplec}}
\newcommand{\example}[1]%
	{\refstepcounter{examplec}\bigskip%
	\noindent\textit{\theexamplec. }#1%
	\rightsquare{}\bigskip}


\newcounter{theoremc}
\renewcommand{\thetheoremc}{Theorem \arabic{theoremc}}
\newcommand{\theorem}[1]%
	{\refstepcounter{theoremc}\bigskip%
	\noindent\textbf{\thetheoremc. }\textsl{#1}%
	\bigskip}


\newcommand{\proof}[1]%
	{\noindent\textit{Proof. }#1%
	\rightsquare{}\bigskip}


\newcommand{\discussion}[1]%
	{\bigskip%
	\noindent\textit{Discussion. }#1%
	\bigskip}


\newcommand{\remark}[1]%
	{\bigskip%
	\noindent\textbf{Remark. }#1%
	\bigskip}


\newcounter{propertylistc}
\newcounter{propertyitemc}
\renewcommand{\thepropertyitemc}%
	{\textbf{(\alph{propertylistc}.\arabic{propertyitemc})}}
\newenvironment{propertylist}
	{\refstepcounter{propertylistc}\begin{list}%
	{\thepropertyitemc}%
	{\usecounter{propertyitemc}}}%
	{\end{list}}


